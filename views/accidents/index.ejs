<% include ../partials/header %>





<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><strong>LifeLine...</strong></h1>
            <p> <strong>Our goal is to stop accidents before they stop you</strong></p>
            <p>
                <br>
                <form class="form-inline" method="GET" action="/accidents">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search by Place" class="form-control">
                        <input type="submit" value="Search" class="btn btn-success btn-large">
                    </div>
                </form>
                <br>
                <a class="btn btn-primary btn-large" href="/accidents/new">New Accident Report Here</a>            
            </p>
        </div>
    </header>
        
        
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% accidents.forEach(function(accident){ %>
            <div class="col-md-6 col-sm-6">
                <div class="thumbnail">
                    <img style="height: 150px;width: 150px;" src = "<%= accident.image %>">
                    <div class="caption">
                        <h4><%= accident.name %></h4>
                    </div>
                    <p>
                        <a href="/accidents/<%= accident._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>    
<% include ../partials/footer %>

